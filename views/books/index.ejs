<h2>Search Authors</h2>
<form action="/books" method="GET">
    <div>
        <label for="">Title</label>
        <input type="text" name="title" autocomplete="off" value="<%= searchOptions.title %>" >
    </div>
    <div>
        <label for="">Published After</label>
        <input type="date" name="publishedAfter" autocomplete="off" value="<%= searchOptions.publishedAfter %>" >
    </div>
    <div>
        <label for="">Published Before</label>
        <input type="date" name="publishedBefore" autocomplete="off" value="<%= searchOptions.publishedBefore %>" >
    </div>
    <button type="submit">Search</button>
</form>
<div>
    <% books.forEach(book => { %>
        <img height="150" width="100" src="<%= book.coverImagePath %> " alt="Book Cover">
    <% }) %>  
</div>